.number-title {
  font-size: 26rpx;
  padding: 20rpx;
  color: #999;
  background-color: #eee;
}

.upload-body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.photo {
  margin-top: 20px;
}

.upload-bgcolor {
  width: 621rpx;
  height: 428rpx;
  background-color: #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.upload-item {
  margin: 10px 0;
}

.upload-idcard {
  width: 100%;
  height: 100%;
}

.upload-idcard image {
  width: 621rpx;
  height: 428rpx;
  border-radius: 20rpx;
  position: absolute;
}

.upload-add {
  position: relative;
  top: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btnNext {
  width: 90%;
  margin: 10px auto;
}

.addicon {
  font-size: 100rpx;
  color: #F67257;
}

.upload-add view {
  margin-top: 20rpx;
}

.pop-body {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  background: #eee;
  text-align: center;
}

.pop-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background: #fff;
}

.pop-item view {
  padding: 14px 0;
  border-bottom: 1px solid #eee;
  width: 100%;
}

.cancle {
  padding: 10px 0;
  margin-top: 5px;
}
.overlay{
    width: 100%;
    z-index: 999;
}
.wrapper{
  display: flex;
    align-items: center;
    justify-content: center;
    margin: auto 0;
    height: 100%;
}
.van-loading__text{
  color: #fff !important;
}