.number-title {
  font-size: 28rpx;
  padding: 30rpx 20rpx;
  background-color: #eee;
}

.upload-body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-bgcolor {
  width: 84vw;
  height: 26vh;
  background-color: #F2F2F2;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.upload-item {
  margin: 10px 0;
}

.upload-idcard {
  width: 100%;
  height: 100%;
}

.upload-idcard image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
}

.upload-add {
  position: relative;
  top: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btnNext {
  width: 90%;
  margin: 0 auto;
  margin-bottom: 10px;
}

.addicon {
  font-size: 100rpx;
  color: #FF4B57;
}

.overlay {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}

.pops {
  height: 100%;
}

.note {
  width: 80%;
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #797979;
  margin-bottom: 10px;
}

.note .note-title {
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
}

.note .note-body {
  padding-top: 10px;
  font-size: 24rpx;
  color: #333;
  line-height: 48rpx;
  text-indent: 2em;
}

.sign-body {
  margin: 20px 0;
  display: flex;
  align-items: center;
}

.sign-body image {
  width: 100px;
  height: 70px;
  position: absolute;
  right: 40%;
}

.wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 100%;
}

.handRight {
  display: inline-flex;
  align-items: center;
  position:absolute;
  width:100%;
  z-index: 9999;
  text-align: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 20px;
  width: 90%;
  height: 86%;
}

.handTitle {
  flex: 1;
  color: #e9e9e9;
  font-size: 18px;
  letter-spacing: 4px;
}

.handBtn-item {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.handBtn-item .btn {
  font-size: 28rpx;
}

.handBtn {
  width: 100%;
}

.black-select {
  width: 70rpx;
  height: 70rpx;
}